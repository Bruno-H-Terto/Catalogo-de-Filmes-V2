<div class="row d-flex align-items-center bg-white full-height">
  <div class="col-6">
    <h2 class="display-2 ms-5">Listagem de Gêneros</h2>
  </div>
  <div class="container-fluid col-4"> 
    <div class="row">
      <% if @genders.present?%>
        <% @genders.each do |gender| %>
          <div class="justify-content-center mt-2">
            <p><%= link_to "#{gender.name}", gender %></p>
          </div>
        <% end %>
        <div class="pagination">
          <%= paginate @genders %>
        </div>
      <% else %>
        <p>Não existem Gêneros cadastrados</p>
      <% end %>
    </div>
  </div>
</div>

