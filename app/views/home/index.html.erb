  <section id="catlog" class="full-height d-flex align-items-center justify-content-center bg-dark text-white">
    <div class="text-center">
      <h1>Bem-vindo a plataforma</h1>
      <p>Oferecemos o melhor acervo de filmes.</p>
      <a href="#" class="btn btn-light mt-3">Saiba Mais</a>
    </div>
  </section>

  <section id="gender" class="full-height d-flex align-items-center justify-content-center bg-secondary-per">

    <div class="container text-center">

      <h2>Gêneros</h2>
      <div class="row align-items-center">
        <div class="col-md-4">
          <div class="service-box">
            <%= image_tag 'gender.svg', alt: 'Descrição da imagem', class: 'img-fluid' %>
          </div>
        </div>


        <div class="col-md-4">
          <div class="service-box">
            <h3><%= link_to 'Novo', new_gender_path, class: 'link' %></h3>
            <p>Cadastre um novo gênero para seu filme.</p>
          </div>
        </div>

        <div class="col-md-4">
          <div class="service-box">
            <h3><%= link_to 'Listar todos', genders_path, class: 'link' %></h3>
            <p>Veja nossa listagem de gêneros cadastrados.</p>
          </div>
        </div>

      </div>
    </div>
  </section>

  <section id="director" class="full-height d-flex align-items-center justify-content-center bg-dark text-white">
    <div class="container text-center">
      <h2>Diretores</h2>
      <div class="row">
        <div class="col-md-4">
          <div class="service-box">
            <h3><%= link_to 'Novo', new_director_path %></h3>
            <p>Cadastre um novo diretor.</p>
          </div>
        </div>
        <div class="col-md-4">
          <div class="service-box">
            <h3><%= link_to 'Listar todos', directors_path, class: 'link' %></h3>
            <p>Veja nossa listagem de diretores cadastrados.</p>
          </div>
        </div>
      </div>
    </div>
  </section>
